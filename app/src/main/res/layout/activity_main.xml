<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/hello_user_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, Maria!"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#956249"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reccommended for you"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#956249"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/hello_user_textview"
        app:layout_constraintTop_toBottomOf="@id/hello_user_textview"
        />


</androidx.constraintlayout.widget.ConstraintLayout>